  <form>
    <input id="uName" type="text" onclick="this.value='';" onfocus="this.select()" onblur="this.value=!this.value?'Username':this.value;" value="Username" />
    <input id="uPassword" type="password" onclick="this.value='';" onfocus="this.select()" onblur="this.value=!this.value?'Password':this.value;" value="Password">
    
    <input id="login" type="button" name="login" value="Log In" />
    <input id="signup" type="button" name="signup" data-toggle="modal" data-target="#exampleModal" value = "Sign Up" />
  </form>
